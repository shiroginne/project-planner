<%= turbo_frame_tag dom_id(task), class: "bg-white border border-gray-200 rounded p-4 shadow-sm flex items-center justify-between hover:shadow-md transition" do %>
  <div class="text-gray-800 font-medium">
    <%= task.name %>
  </div>

  <div class="flex space-x-2">
    <%= link_to "Edit",
                edit_project_task_path(task.project, task),
                data: { turbo_frame: dom_id(task) },
                class: "text-blue-600 hover:text-blue-800 text-sm px-3 py-1 border border-blue-500 rounded transition" %>

    <%= button_to "Delete",
                  project_task_path(task.project, task),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  form: { "data-turbo-frame": "_top" },
                  class: "text-white bg-red-500 hover:bg-red-600 text-sm px-3 py-1 rounded" %>
  </div>
<% end %>
