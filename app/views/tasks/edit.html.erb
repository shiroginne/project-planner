<%= turbo_frame_tag dom_id(@task), class: "bg-white border rounded p-4 shadow-sm" do %>
  <%= form_with model: [@project, @task], data: { turbo_frame: "_top" }, class: "flex space-x-2 items-end" do |f| %>
    <div class="flex-1">
      <%= f.label :name, "Edit Task", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name,
                       class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= f.submit "Save",
                   class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition" %>
    </div>
  <% end %>
<% end %>
